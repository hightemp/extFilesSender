{
  "name": "extFileExchanger",
  "description": "Runs an Http and WebSocket file exchange server.",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "statics/icons/icon-16x16.png",
    "48": "statics/icons/icon-48x48.png",
    "128": "statics/icons/icon-128x128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "background",
    "notifications",
    "idle",
    "networking.config",
    "networking.onc",
    "system.network",
    "fileSystem",
    "socket",
    {
      "fileSystem": [
        "write"
      ]
    }
  ],
  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": "*"
    }
  },
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
  }
}